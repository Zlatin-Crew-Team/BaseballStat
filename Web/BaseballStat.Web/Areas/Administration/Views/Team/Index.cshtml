@model BaseballStat.Web.ViewModels.Team.TeamListViewModel
@{
    ViewData["Title"] = "Teams";
}

<div class="col-lg-12">
    <h2>Teams</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>City</th>
                <th>Founded Year</th>
                <th>Owner</th>
                <th>Stadium</th>
                <th>Logo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in Model.Teams)
            {
                <tr>
                    <td>@team.Name</td>
                    <td>@team.City</td>
                    <td>@team.FoundedYear</td>
                    <td>@team.Owner</td>
                    <td>@team.Stadium</td>
                    <td><img src="@team.LogoUrl" alt="Team Logo" width="100" height="100" /></td>
                    <td>
                        <form method="post" asp-action="AddTeam" asp-controller="Team" asp-area="Administration">
                            <input type="hidden" name="id" value="@team.Id" />
                            <button type="submit" class="btn btn-success">Add</button>
                        </form>
                        <form method="post" asp-action="UpdateTeam" asp-controller="Team" asp-area="Administration">
                            <input type="hidden" name="id" value="@team.Id" />
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                        <form method="post" asp-action="DeleteTeam" asp-controller="Team" asp-area="Administration">
                            <input type="hidden" name="id" value="@team.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

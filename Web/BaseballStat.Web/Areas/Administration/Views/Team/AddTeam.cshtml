@model BaseballStat.Web.ViewModels.Team.TeamInputModel
@{
    ViewData["Title"] = "Add Team";
}

<div class="col-lg-6">
    <h2>New Team</h2>
    <form method="post" enctype="multipart/form-data" class="pt-4">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Name" class="form-control" required="required">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">City</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.City" class="form-control" required="required">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Founded Year</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.FoundedYear" class="form-control" required="required">
                <span asp-validation-for="FoundedYear" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Owner</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Owner" class="form-control" required="required">
                <span asp-validation-for="Owner" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Stadium</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Stadium" class="form-control" required="required">
                <span asp-validation-for="Stadium" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Logo</label>
            <div class="col-sm-10">
                <input type="file" asp-for="@Model.Logo" class="form-control-file image-upload" required="required" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">League</label>
            <div class="col-sm-10">
                <input asp-for="@Model.LeagueId" class="form-control" required="required"/>
                <span asp-validation-for="LeagueId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success"
                        asp-area="Administration" asp-controller="Team" asp-action="AddTeam">
                    Add Team
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Administration" asp-controller="Team" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
    @if (ViewData["TeamId"] != null)
    {
        <div class="mt-3">
            <a href="@Url.Action("AddTeamStatistic", "TeamStatistic", new { teamId = ViewData["TeamId"] })" class="btn btn-primary">
                <i class="fas fa-chart-line"></i> Add Team Statistic
            </a>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


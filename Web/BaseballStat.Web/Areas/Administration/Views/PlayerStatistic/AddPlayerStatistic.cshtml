@model BaseballStat.Web.ViewModels.PlayerStatistic.PlayerStatisticInputModel

@{
    this.ViewData["Title"] = "Add Player Statistic";
}

<div class="container mt-5">
    <h2 class="text-center text-white mb-4" style="background-color: #007bff; padding: 15px; border-radius: 8px;">
        Add Player Statistic
    </h2>

    <form asp-action="AddPlayerStatistic" asp-controller="PlayerStatistic" asp-area="Administration" method="post" enctype="multipart/form-data">
       
        <input type="hidden" name="PlayerId" value="@Model.PlayerId" />

        <div class="form-group">
            <label asp-for="Games" class="font-weight-bold text-primary">Games Played</label>
            <input asp-for="Games" class="form-control" type="number" placeholder="Enter number of games" />
            <span asp-validation-for="Games" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AtBats" class="font-weight-bold text-primary">At Bats</label>
            <input asp-for="AtBats" class="form-control" type="number" placeholder="Enter number of at bats" />
            <span asp-validation-for="AtBats" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Runs" class="font-weight-bold text-primary">Runs</label>
            <input asp-for="Runs" class="form-control" type="number" placeholder="Enter number of runs" />
            <span asp-validation-for="Runs" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Hits" class="font-weight-bold text-primary">Hits</label>
            <input asp-for="Hits" class="form-control" type="number" placeholder="Enter number of hits" />
            <span asp-validation-for="Hits" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Doubles" class="font-weight-bold text-primary">Doubles</label>
            <input asp-for="Doubles" class="form-control" type="number" placeholder="Enter number of doubles" />
            <span asp-validation-for="Doubles" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Triples" class="font-weight-bold text-primary">Triples</label>
            <input asp-for="Triples" class="form-control" type="number" placeholder="Enter number of triples" />
            <span asp-validation-for="Triples" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HomeRuns" class="font-weight-bold text-primary">Home Runs</label>
            <input asp-for="HomeRuns" class="form-control" type="number" placeholder="Enter number of home runs" />
            <span asp-validation-for="HomeRuns" class="text-danger"></span>
        </div>

       
        <div class="form-group">
            <label asp-for="Image" class="font-weight-bold text-primary">Player Image</label>
            <input asp-for="Image" class="form-control" type="file" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success btn-lg mt-3" style="width: 100%; background-color: #28a745; border-color: #28a745;">
            <i class="fas fa-plus"></i> Add PlayerStatistic
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
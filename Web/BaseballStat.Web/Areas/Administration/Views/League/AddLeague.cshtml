@model BaseballStat.Web.ViewModels.League.LeagueInputModel
@{
    ViewData["Title"] = "Add League";
}

<h2>Add League</h2>

<form asp-action="AddLeague" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" type="file" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">AddLeague</button>
</form>


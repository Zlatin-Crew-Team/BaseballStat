@model BaseballStat.Web.ViewModels.AllTimeGreat.AllTimeGreatInputModel

@{
    this.ViewData["Title"] = "Add All-Time Great Player";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center">
                    <h2>Add an All-Time Great Player</h2>
                </div>
                <div class="card-body bg-light">
                    <form asp-action="Add" method="post" enctype="multipart/form-data">
                        <!-- Name -->
                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label">Player Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter player's name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Bio -->
                        <div class="form-group mb-4">
                            <label asp-for="Bio" class="form-label">Biography</label>
                            <textarea asp-for="Bio" class="form-control" rows="5" placeholder="Enter a short biography"></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>

                        <!-- Image -->
                        <div class="form-group mb-4">
                            <label asp-for="Image" class="form-label">Player Image</label>
                            <input asp-for="Image" type="file" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg shadow">
                                <i class="fas fa-save me-2"></i> Add Player
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />}
@model BaseballStat.Web.ViewModels.Award.AwardInputModel

@{
    ViewData["Title"] = "Add Award";
}

<h2>Add Award</h2>

<form asp-action="AddAward" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label"></label>
        <input asp-for="Year" type="number" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Winner" class="control-label"></label>
        <input asp-for="Winner" class="form-control" />
        <span asp-validation-for="Winner" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image" class="control-label"></label>
        <input asp-for="Image" type="file" class="form-control-file" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AwardTypeId" class="control-label"></label>
        <input asp-for="AwardTypeId" type="number" class="form-control" />
        <span asp-validation-for="AwardTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <input asp-for="CategoryId" type="number" class="form-control" />
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeamId" class="control-label"></label>
        <input asp-for="TeamId" type="number" class="form-control" />
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LeagueId" class="control-label"></label>
        <input asp-for="LeagueId" type="number" class="form-control" />
        <span asp-validation-for="LeagueId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

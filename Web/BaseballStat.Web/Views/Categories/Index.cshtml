@model BaseballStat.Web.ViewModels.Category.CategoriesListViewModel

@{
    this.ViewData["Title"] = "Categories of BaseballStat";
}

<div class="row">
    <!-- Iterate through categories -->
    @foreach (var category in Model.Categories)
    {
        <div class="col-lg-4">
            <hr class="bg-dark mx-4" style="height: 6px;" />
            <!-- Card for category -->
            <div class="card">
                <img src="@category.ImageUrl" class="card-img-top img-fluid" alt="@category.Name" style="height: 400px; object-fit: cover;">
                <div class="card-body">
                    <h2 class="card-title text-center">@category.Name</h2>
                    <p class="card-text">@category.Description</p>

                    <!-- Toggle Buttons for each Category -->
                    <div id="category-buttons-@category.Id" class="category-buttons" style="display: none;">
                        <!-- Awards Button -->
                        <div class="text-center mt-3">
                            <a asp-controller="Award" asp-action="Index" asp-route-id="@category.Id" class="btn btn-primary btn-block">
                                Awards
                            </a>
                        </div>

                        <!-- Records Button -->
                        <div class="text-center mt-3">
                            <a asp-controller="Record" asp-action="Index" asp-route-id="@category.Id" class="btn btn-primary btn-block">
                                Records
                            </a>
                        </div>

                        <!-- All Time Greats Button -->
                        <div class="text-center mt-3">
                            <a asp-controller="AllTimeGreat" asp-action="Index" asp-route-id="@category.Id" class="btn btn-primary btn-block">
                                All Time Great
                            </a>
                        </div>
                    </div>

                    <!-- Show/Hide Buttons Link -->
                    <div class="text-center mt-3">
                        <button class="btn btn-secondary" onclick="toggleCategoryButtons('@category.Id')">Toggle Buttons</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    // Function to toggle visibility of category buttons
    function toggleCategoryButtons(categoryId) {
        var buttonsDiv = document.getElementById('category-buttons-' + categoryId);

        // Toggle the visibility of the buttons for the selected category
        if (buttonsDiv.style.display === "none" || buttonsDiv.style.display === "") {
            buttonsDiv.style.display = "block"; // Show the buttons
        } else {
            buttonsDiv.style.display = "none"; // Hide the buttons
        }
    }
</script>
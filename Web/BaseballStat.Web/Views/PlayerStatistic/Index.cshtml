@model BaseballStat.Web.ViewModels.PlayerStatistic.PlayerStatisticViewModel

@{
    ViewData["Title"] = "Player Statistics";
}

<div class="container d-flex justify-content-center align-items-center py-5" style="min-height: 100vh;">
    <div class="card shadow-lg mb-3 w-100" style="max-width: 900px; border-radius: 10px; overflow: hidden;">
        <div class="row g-0">
            <!-- Player Image Section -->
            <div class="col-md-5">
                @if (Model.ImageUrl != null)
                {
                    <img src="@Model.ImageUrl" class="img-fluid h-100 w-100" alt="Player Image" style="object-fit: cover;">
                }
                else
                {
                    <div class="d-flex justify-content-center align-items-center h-100 bg-secondary text-white">
                        <p>No Image Available</p>
                    </div>
                }
            </div>
            <!-- Player Statistics Section -->
            <div class="col-md-7">
                <div class="card-body">
                    <hr class="my-4">
                    <div class="row">
                        <div class="col-6">
                            <p class="card-text"><strong>Games:</strong> @Model.Games</p>
                            <p class="card-text"><strong>At Bats:</strong> @Model.AtBats</p>
                            <p class="card-text"><strong>Runs:</strong> @Model.Runs</p>
                            <p class="card-text"><strong>Hits:</strong> @Model.Hits</p>
                        </div>
                        <div class="col-6">
                            <p class="card-text"><strong>Doubles:</strong> @Model.Doubles</p>
                            <p class="card-text"><strong>Triples:</strong> @Model.Triples</p>
                            <p class="card-text"><strong>Home Runs:</strong> @Model.HomeRuns</p>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-4">
                        <a asp-controller="Player" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-primary me-2">Back to Player </a>
                        <a asp-controller="Team" asp-action="Index" class="btn btn-secondary">Back to Teams</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>